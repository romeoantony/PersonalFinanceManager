<Window x:Class="PersonalFinanceManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalFinanceManager"
        xmlns:vm="clr-namespace:PersonalFinanceManager.ViewModels"
        mc:Ignorable="d"
        Title="Personal Finance Manager" Height="700" Width="900">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar / Add Expense -->
        <Border Grid.Column="0" Background="#F0F0F0" Padding="15" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Add Expense" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Description"/>
                <TextBox Text="{Binding NewExpenseDescription}" Margin="0,5,0,15" Padding="5"/>

                <TextBlock Text="Amount"/>
                <TextBox Text="{Binding NewExpenseAmount}" Margin="0,5,0,15" Padding="5"/>

                <TextBlock Text="Category"/>
                <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" DisplayMemberPath="Name" Margin="0,5,0,15" Padding="5"/>

                <TextBlock Text="Date"/>
                <DatePicker SelectedDate="{Binding SelectedDate}" Margin="0,5,0,20" Padding="5"/>

                <Button Content="Add Expense" Command="{Binding AddExpenseCommand}" Padding="10" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
                
                <TextBlock Text="Total Expenses" FontSize="16" FontWeight="Bold" Margin="0,30,0,5"/>
                <TextBlock Text="{Binding TotalExpenses, StringFormat=C}" FontSize="24" Foreground="#D32F2F"/>

                <TextBlock Text="This Month" FontSize="16" FontWeight="Bold" Margin="0,20,0,5"/>
                <TextBlock Text="{Binding CurrentMonthTotal, StringFormat=C}" FontSize="24" Foreground="#388E3C"/>

                <StackPanel Orientation="Horizontal" Margin="0,30,0,0" HorizontalAlignment="Center">
                    <Button Content="Excel" Command="{Binding ExportToExcelCommand}" Width="80" Margin="0,0,10,0" Padding="5"/>
                    <Button Content="PDF" Command="{Binding ExportToPdfCommand}" Width="80" Padding="5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content / List -->
        <Grid Grid.Column="1" Margin="20,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Recent Expenses" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <DataGrid Grid.Row="1" ItemsSource="{Binding Expenses}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="100"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" Width="120"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- <lvc:PieChart Grid.Row="2" Series="{Binding Series}" LegendPosition="Right" Height="200" Margin="0,20,0,0"/> -->
        </Grid>
    </Grid>
</Window>
